    <ImageView
        android:id="@+id/img_contact"
        android:layout_width="119dp"
        android:layout_height="102dp"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/logo" />




</FrameLayout>